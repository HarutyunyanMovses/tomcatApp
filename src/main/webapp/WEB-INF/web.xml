<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>/sign-in.jsp</welcome-file>
    </welcome-file-list>
    <!-- add address servlet  and mapping    -->
    <servlet>
        <servlet-name>AddAddressServlet</servlet-name>
        <servlet-class>com.Tomcat.controller.addressController.AddAddressServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddAddressServlet</servlet-name>
        <url-pattern>/add-address</url-pattern>
    </servlet-mapping>
    <!--    -->
    <!--    registration servlet and mapping-->
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>com.Tomcat.controller.userController.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <!--    -->
    <!--    login servlet and mapping-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.Tomcat.controller.userController.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!--    -->
    <!--  verification servlet and mapping  -->
    <servlet>
        <servlet-name>VerifyServlet</servlet-name>
        <servlet-class>com.Tomcat.controller.userController.VerifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerifyServlet</servlet-name>
        <url-pattern>/verify</url-pattern>
    </servlet-mapping>
    <!--    -->
    <!--    forgot password servlet and mapping-->
    <servlet>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <servlet-class>com.Tomcat.controller.userController.ForgotPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <url-pattern>/forgot</url-pattern>
    </servlet-mapping>
    <!--    -->
</web-app>